# File: mcp-server/.env.example
# Copy this file to .env and fill in your values

# MCP Server Configuration

# MCP_SERVER_PORT: port used for inbound MCP connections when it is run as a standalone server; normally we run 
# it as a stdio server, so this has no effect in that configuration.
MCP_SERVER_PORT=3001
# MCP_API_BASE_URL: The naming is misleading; This is actually the base URL for obliq-2 API access
MCP_API_BASE_URL=http://localhost:3000

# Authentication tokens
MCP_API_TOKEN=your-mcp-authentication-token
# MODEL_BUILDER_API_TOKEN: drop in a user-specific API Key generated by your obliq-2 application
MODEL_BUILDER_API_TOKEN=your-automation-api-token

# Debug mode (optional)
MCP_DEBUG=false